int findLongestConseqSubseq(int arr[], int n)
{
    int mx=*max_element(arr,arr+n);
    int v[mx+1]={0};
    for(int i=0;i<n;i++)
    {
        v[arr[i]]=1;
    }
    int res=0;
    int ans=0;
    for(int i=0;i<=mx;i++)
    {
        if(v[i]==1)
        {
            ans++;
        }
        else
        {
            ans=0;
        }
        res=max(ans,res);
    }
    return res;
  //Your code here
}
